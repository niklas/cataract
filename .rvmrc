rvm use ruby-2.0.0-p576@cataract --create

# useful aliases may be added here
alias cu='truncate --size 0 log/*.log; clear; bundle exec cucumber -r features/'

# run the given feature in develotest mode (random port turns of drb connection to spork)
devtest() {
  export DEVELOTEST=true
  export KOPFLOS=false
  cu --port 65123 $@
}
