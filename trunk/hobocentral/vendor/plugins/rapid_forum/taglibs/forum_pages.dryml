<def tag="forum-moderators">
  <section class="moderators collection" merge-attrs>
    <h2>Moderators</h2>
    <collection:moderators>
      <empty-message:>This forum is unmoderated, go wild!</empty-message:>
    </collection:moderators>
  </section>
</def>

<def tag="show-page" extend-with="forum">
  <show-page-without-forum merge>
    <primary-collection-title: replace/>
    <aside:>
      <forum-moderators/>
    </aside:>
  </show-page-without-forum>
</def>
