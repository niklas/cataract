<def tag="alert">
  <div class="alert #{this.subject._?.class.name.underscore} #{this.name.underscore}" hobo-model-id="#{dom_id}" merge-attrs>
    <delete-button confirm="&false" param subsite=""/>
    <call-tag:subject tag="#{this.name}_alert" param="message"/>
  </div>
</def>

<def tag="alerts">
  <div class="#{this.member_class.name.underscore.pluralize}" if="any?">
    <alert repeat merge/>
  </div>
</def>
