<html>
  <head>
    <title><%= @page_title -%> (<%= @controller.controller_name %>)</title>
    <%= stylesheet_link_tag 'torrents' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>

   <div id="header">
    <div class="box">
      <h1><%= @page_title -%></h1>
      <h2>
        <ul class="nav">
        <li><a href="foo">Add single Torrent</a></li>
        <li><%= link_to 'Feeds', :controller => 'feed' %></li>
        </ul>
      </h2>
    </div>
    <hr style="background-color: #2b2b2b; height: 1px; border: 0 none;" />
  </div>

  <div id="group_selector">
    <ul>
      <li><%= link_to "Running", :action => 'running', :controller => 'torrents' -%></li>
      <li><%= link_to "Paused", :action => 'paused' , :controller => 'torrents'-%></li>
      <li><%= link_to "History", :action => 'history' , :controller => 'torrents'-%></li>
      <li><%= link_to "invalid", :action => 'invalid' , :controller => 'torrents'-%></li>
      <li><%= link_to "my settings", :action => 'user_settings' , :controller => 'config'-%></li>
    </ul>
  </div>

  <div id="content">
    <%= @content_for_layout %>
  </div>

  <div id="torrent"></div>

  <div id="sidebar">

    <div id="notice">
      <%= flash[:notice] %>
    </div>

    <% if @controller.controller_name == 'torrents' %>
    <%= periodically_call_remote :update => 'summary',
      :frequency => 42,
      :url => {:action => 'summary'} %>
    <div id="summary">
        <%= render 'torrents/summary' %>
    </div>
    <%= periodically_call_remote :update => 'watchlist',
      :frequency => 42,
      :url => {:action => 'watchlist'} %>
    <div id="watchlist">
      <%= render :partial => 'watchlist' %>
    </div>
    <% end %>

  </div>

  </body>
</html>
