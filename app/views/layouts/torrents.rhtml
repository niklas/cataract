<html>
  <head>
    <title><%= @page_title -%> (<%= @controller.controller_name %>)</title>
    <%= stylesheet_link_tag 'torrents' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>

  <div id="header" onmouseover="MenuHovered()" onmouseout="MenuUnhovered()">
    <span class="logo"><%= image_tag('cataract', :class => "test", :onlick => "new Effect.SlideUp('actions')") %></span>
    <%= image_tag('layout/corner_left', :style => 'float:left') %>
    <%= image_tag('layout/corner_right', :style => 'float:right') %>
	 <div id="actions" style="display:none">
	   <ul>
	     <li><a href="#">Add single Torrent</a></li>
	     <li><a href="#">Add Torrent Feed</a></li>
      </ul>
    </div>
  </div>

    <ul id="groups">
      <%= group_link('running') %>
      <%= group_link('paused') %>
      <%= group_link('history') %>
      <%= group_link('invalid') %>
      <li><%= link_to "my settings", :action => 'user_settings' , :controller => 'config'-%></li>
    </ul>



    <div id="john_cage">
    <div id="content">
      <%= yield  %>
    </div>
    </div>

    <div id="summary">
      <%= render '/torrents/summary' %>
        <div id="notice">
      <%= flash[:notice] %>
    </div>
    </div>
    <div id="watchlist">
      <%= render :partial => '/torrents/watchlist' %>
    </div>


  <% if false && @controller.controller_name == 'torrents' %>
  <%= periodically_call_remote :update => 'summary',
    :frequency => 42,
    :url => {:action => 'summary'} %>

  <%= periodically_call_remote :update => 'watchlist',
    :frequency => 42,
    :url => {:action => 'watchlist'} %>
  <% end %>


  </body>
</html>
