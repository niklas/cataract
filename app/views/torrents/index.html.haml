- for_header do
  %a{href: dashboard_path, data: {direction: 'reverse'}}= ta :back
  %h1= search.status

- for_footer do
  = render 'navigation'

= mobile_tag role: 'listview', class: 'torrents', tag: 'ul' do
  - for torrent in @torrents
    %li.torrent{class: torrent.status}
      %a{href: torrent_path(torrent)}
        %h3.title= torrent.short_title
        %p.filename.ui-li-desc= torrent.filename
