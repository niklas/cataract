<% torrent ||= actions %>

<%= show_torrent_link torrent, :label => (@torrent == torrent ? 'Update' : 'Details'), :target => 'helm' %>
<%= create_torrent_transfer_form torrent, :label => 'Start' if torrent.startable? %>
<%= destroy_torrent_transfer_form torrent, :label => 'Stop' if torrent.stoppable? %>
<%= update_torrent_transfer_form torrent, :label => 'Pause', :action => 'pause' if torrent.running? %>

<% if torrent.local? %>
  <%= show_torrent_files_link torrent, :label => 'Content', :target => 'helm' %>
  <%= edit_torrent_files_link torrent, :label => 'Move', :target => 'helm' %>
  <%= destroy_torrent_files_form torrent, :label => 'Delete content', :confirm => 'Really delete Content?' %>
<% end %>
