<def tag="samplemenu">
   <buttons>
      <li><a href="#">ABCDEF</a></li>
      <li><a href="#">XYZ ZYX</a></li>
      <li><a href="#">LMN</a></li>
   </buttons>
</def>

<lcars-page>
   <body:>
      <lcars variant="nws" class="cols3 rows2 x1 y1">
         <content:>
            Only Content
         </content>
      </lcars>
      <lcars variant="nes" class="cols3 rows2 x2 y1" scheme="secondary">
         <content:>
            Content with Right Menu
         </content>
         <right:>
            <samplemenu />
         </right>
      </lcars>
      <lcars variant="nws" class="cols3 rows2 x3 y1">
         <content:>
            Content with only Top Title
         </content>
         <top:>
            <span class="title">Top Title</span>
         </top>
      </lcars>
      <lcars variant="nes" class="cols3 rows2 x1 y2">
         <content:>
            Content with Top Title and Right Menu
         </content>
         <right:>
            <samplemenu />
         </right>
         <top:>
            <span class="title">Top Title</span>
         </top>
      </lcars>
      <lcars variant="nws" class="cols3 rows2 x2 y2" scheme="secondary">
         <content:>
            Content with Top Title and Left Menu
         </content>
         <left:>
            <samplemenu />
         </left>
         <top:>
            <span class="title">Top Title</span>
         </top>
      </lcars>
      <lcars variant="nws" class="cols3 rows2 x3 y2" scheme="ancillary">
         <content:>
            Content with Bottom Title and Left Menu
         </content>
         <left:>
            <samplemenu />
         </left>
         <bottom:>
            <span class="title">Top Title</span>
         </bottom>
      </lcars>
   </body>
</lcars-page>
