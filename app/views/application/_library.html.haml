%ul.nav.pull-right
  %li.dropdown
    %a.dropdown-toggle{href: '#', 'data-toggle' => 'dropdown'}
      %span.name= ta :directories
      %b.caret
    %ul.dropdown-menu.directories
      - Directory.roots.order(:name).each do |dir|
        = li_link dir.name, directory_path(dir), can: [:show, dir], class: 'name'
      %li.devider
      = li_link :all_directories, directories_path, can: [:index, Directory]
      = li_link :create_directory, new_directory_path, can: [:create, Directory]
