@import 'compass';

.pie .slice {
  <% 0.upto(50) do |i| %>
    &._<%= i %> .p {
      @include rotate(<%= (360.0 / 100.0 * i).to_i %>deg);
    }
    &._<%= i + 50 %> {
      @include rotate(180deg);
      .p {
        @include rotate(<%= (360.0 / 100.0 * i).to_i %>deg);
      }
    }
  <% end %>
  &._half .p {
    @include rotate(180deg);
  }
}
