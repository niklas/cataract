<h2>{{content.name}}</h2>

<label for="directory_subscribed">
  {{view Ember.Checkbox checkedBinding="content.subscribed" elementID="directory_subscribed"}}
  subscribed
</label>

{{#if content.subscribed}}
  {{view Bootstrap.Forms.TextField valueBinding="content.filter" label="Filter"}}
{{/if}}

<a class="cancel btn" {{action cancel}}>Cancel</a>
<a class="save btn btn-primary" {{action save}}>Save</a>

