<ul class="nav nav-tabs disks">
  {{#each directories}}
  <li {{bind-attr class=":disk active disk.isMounted:mounted:unmounted"}}>
  {{#link-to 'directory' this class="name"}}
      <i {{bind-attr class=":glyphicon disk.isMounted:glyphicon-hdd:glyphicon-warning-sign"}}></i>
      {{disk.name}}
    {{/link-to}}
  </li>
  {{else}}
    {{#each controllers.disks}}
    <li {{bind-attr class=":disk active isMounted:mounted:unmounted"}}>
    {{#link-to 'disk' this class="name"}}
        <i {{bind-attr class=":glyphicon isMounted:glyphicon-hdd:glyphicon-warning-sign"}}></i>
        {{name}}
      {{/link-to}}
    </li>
    {{/each}}
  {{/each}}
</ul>

{{view Cataract.Pagination controllerBinding="controllers.torrents"}}

