.container-fluid
  .form-horizontal

    .form-group
      label
        = input type="checkbox" checked=content.disableSignup classNames='form-control'
        | Disable signup

    .checkbox
      label for="download_directory" Download Directory
      = select-directory selection=content.incomingDirectory content=directories optionLabelPath="content.nameWithDisk" prompt="---" elementId="download_directory" classNames='form-control'

    .actions
      icon-button action="save" param=content disabled=content.disableSave icon='ok' name='save' severity='success' | Save

