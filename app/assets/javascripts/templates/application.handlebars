<div id="header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
          <span class="glyphicon glyphicon-bar"></span>
          <span class="glyphicon glyphicon-bar"></span>
          <span class="glyphicon glyphicon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">
          Cataract
          {{loading-spinner}}
        </a>
      </div>

      <div class="collapse navbar-collapse">

        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            {{delayed-input value=controller.terms classNames="form-control search-query" elementId="torrent_search_terms"}}
          </div>
        </form>

        <ul class="nav navbar-nav">
          {{outlet 'nav'}}
          {{partial "torrents/navigation"}}
          {{render 'moves'}}
        </ul>

        {{rails-session}}

      </div>

    </div>
    {{flash-list}}
  </nav>
</div>

<div id="sidebar">
  {{ render 'directories' }}
</div>


<div id="middle">

  <div id="content" class="container-fluid" {{bind-attr class="detailsExtended:shrunk"}}>
    {{outlet}}
  </div>

  <div id="bar" {{bind-attr class=":well detailsExtended:up"}}>
    {{ outlet 'bar' }}
    {{partial "torrents/tabs"}}
    {{status-message isOnline=transferStatus.online errorMessage=transferStatus.offlineReason refresh="refreshTransfers"}}
    {{drop-zone action="uploadTorrent"}}
  </div>

  <div id="details" {{bind-attr class="detailsExtended:extended"}}>
    {{ outlet 'details' }}
  </div>
</div>

{{ outlet 'modal' }}
