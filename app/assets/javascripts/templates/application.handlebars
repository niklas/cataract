<div id="header">
  <div class="navbar navbar-fixed-top navbar-search">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a href="/" class="brand">Cataract</a>

        <div class="nav-collapse">

          {{view Cataract.SessionView}}

          <ul id="queue" class="nav pull-right">
            {{#if Cataract.moves.length}}
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="badge badge-info">{{Cataract.moves.length}}</span>
              </a>
              {{view Cataract.QueueView contentBinding="Cataract.moves"}}
            </li>
            {{/if}}
          </ul>

          <ul class="nav">
            <li><a href="#torrents/recent">Recent</a></li>
            <li><a href="#torrents/running">Running</a></li>
            <li><a href="#" {{action add}}>Add</a></li>
          </ul>

          {{view Ember.TextField valueBinding="Cataract.router.torrentsController.terms" classNames="search-query" elementId="torrent_search_terms"}}
        </div>

      </div>
    </div>
  </div>
</div>

{{view Cataract.FlashListView}}

<div class="row-fluid">
  <div class="span3">
    <div id="sidebar">
      <ul class="nav nav-list directories">
        <li class="nav-header">Directories</li>
        {{#each Cataract.rootDirectories}}
        <li {{bindAttr class="cssClass active isExisting:existing:missing"}}>
          <a class="name" href="#" {{action setCurrentDirectory this}}>
            <i {{bindAttr class="isExisting:icon-folder-open:icon-warning-sign"}}></i>
            {{name}}
          </a>
        </li>
        {{/each}}
        {{#if Cataract.currentDirectory}}
          <li class="divider"></li>
          <li><a href="#" {{action setCurrentDirectory null}}>reset</a></li>
        {{/if}}
      </ul>

      <ul class="nav nav-list disks">
        <li class="nav-header">Disks</li>
        {{#each Cataract.disks}}
        <li {{bindAttr class="cssClass active isMounted:mounted:unmounted"}}>
        <a class="name" href="#" {{action setCurrentDisk this}}>
            <i {{bindAttr class="isMounted:icon-hdd:icon-warning-sign"}}></i>
            {{name}}
          </a>
        </li>
        {{/each}}
        {{#if Cataract.currentDisk}}
          <li class="divider"></li>
          <li><a href="#" {{action setCurrentDisk null}}>reset</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
  <div class="span9">
    <div>breadcrumbs</div>
    {{outlet pre}}
    {{outlet}}
  </div>
</div>
