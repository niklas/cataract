              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="badge badge-info">{{Cataract.moves.length}}</span>
              </a>
              {{view Cataract.QueueView contentBinding="Cataract.moves"}}
            </li>
            {{/if}}
          </ul>
          <ul class="nav">
            <li><a href="#torrents/recent">Recent</a></li>
            <li><a href="#torrents/running">Running</a></li>
            <li><a href="#" {{action add}}>Add</a></li>
          </ul>
          {{view Ember.TextField valueBinding="Cataract.router.torrentsController.terms" classNames="search-query" elementId="torrent_search_terms"}}
