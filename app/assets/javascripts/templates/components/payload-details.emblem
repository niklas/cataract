link-to (query-params path=content.directory.relativePath) class="content_directory_name"
  directory-item content=content.directory
unless isCollapsed
  disk-item content=content.directory.disk statsVisible=false
  .content_directory_path title=content.directory.pathWithDisk
    = content.directory.relativePath
  .files-meta
    .payload-size= content.humanSize
