modal-dialog action="createDirectory" heading="new Directory" primary="Create Directory" secondary="Cancel"

  .container-fluid
    .form-horizontal

      .form-group
        label for="directory_name" Name
        = input value=name class="form-control" elementId="directory_name"

      .form-group
        label for="directory_disk" Disk
        = select-disk selection=disk content=disks elementId="directory_disk" classNames='form-control'

      .form-group
        label for="directory_parent" Parent
        = select-directory selection=parentDirectory content=disk.directories elementId="directory_parent" classNames='form-control' prompt="[Root]"

      .checkbox
        label
          = input type="checkbox" checked=showSubDirs
          | contains more directories

      .checkbox
        label
          = input type="checkbox" checked=subscribed disabled=showSubDirs
          | subscribe

      if subscribed
        .form-group
          label for="directory_filter" Filter
          = input value=filter class="form-control" elementId="directory_filter"
